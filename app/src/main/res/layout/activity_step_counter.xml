<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StepCounterActivity">

    <com.mikhaellopez.circularprogressbar.CircularProgressBar
        android:id="@+id/cpbStepCounter"
        android:layout_width="376dp"
        android:layout_height="226dp"
        android:layout_marginTop="60dp"
        app:cpb_background_progressbar_color="#b6bbd8"
        app:cpb_background_progressbar_width="5dp"
        app:cpb_progress_direction="to_right"
        app:cpb_progressbar_color="#3f51b5"
        app:cpb_progressbar_width="10dp"
        app:cpb_round_border="false"
        app:cpb_progress_max="10000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvStepLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STEPS"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/cpbStepCounter"
        app:layout_constraintEnd_toEndOf="@+id/cpbStepCounter"
        app:layout_constraintStart_toStartOf="@+id/cpbStepCounter"
        app:layout_constraintTop_toTopOf="@+id/cpbStepCounter"
        app:layout_constraintVertical_bias="0.115" />

    <TextView
        android:id="@+id/tvStepCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/cpbStepCounter"
        app:layout_constraintEnd_toEndOf="@+id/cpbStepCounter"
        app:layout_constraintStart_toStartOf="@+id/cpbStepCounter"
        app:layout_constraintTop_toTopOf="@+id/cpbStepCounter" />

    <TextView
        android:id="@+id/tvStepMaxLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/100"
        app:layout_constraintBottom_toBottomOf="@+id/cpbStepCounter"
        app:layout_constraintEnd_toEndOf="@+id/cpbStepCounter"
        app:layout_constraintStart_toStartOf="@+id/cpbStepCounter"
        app:layout_constraintTop_toBottomOf="@+id/tvStepCounter"
        app:layout_constraintVertical_bias="0.25" />

</androidx.constraintlayout.widget.ConstraintLayout>